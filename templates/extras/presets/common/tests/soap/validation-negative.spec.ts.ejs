import { expect, test } from '@fixtures';
import { validateSoapResponse } from '@services';

test(
  'Validation should fail for empty CapitalCity',
  { tag: ['@negative'] },
  async ({ soapSchemas }) => {
    await expect(validateSoapResponse(soapSchemas.capitalCitySchema, '')).rejects.toThrow();
  },
);

