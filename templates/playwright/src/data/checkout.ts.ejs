export type CheckoutData = {
  firstName: string;
  lastName: string;
  postalCode: string;
};

export type InventorySelection = {
  name: string;
  items: string[];
};

export type CheckoutDataset = {
  valid: CheckoutData[];
  edge: CheckoutData[];
  invalid: (CheckoutData & { reason: string })[];
  inventorySelections: InventorySelection[];
};

export const checkoutData = raw as CheckoutDataset;

/**
 * Simple data factory for randomized-but-stable inputs.
 * You can swap this with @faker-js/faker if you prefer.
 */
export function makeCheckoutData(overrides: Partial<CheckoutData> = {}): CheckoutData {
  const base: CheckoutData = {
    firstName: 'John',
    lastName: 'Doe',
    postalCode: '94105',
  };
  return { ...base, ...overrides };
}
