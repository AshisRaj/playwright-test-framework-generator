import { BasePage } from '@pages';
import { Page } from '@playwright/test';

export class HomePage extends BasePage {
  constructor(page: Page) {
    super(page);
  }

  // Define page elements
  elements = {
    actionElements: {
      getStartedButton: () => this.getByRole('link', { name: 'Get started' }),
    },

    inputElements: {},

    visualElements: {},
  };

  // Define page actions
  actions = {
    clickGetStarted: async (): Promise<void> => {
      const button = this.elements.actionElements.getStartedButton();
      await this.click(button);
    },
  };

  // Define page navigation
  navigation = {
    goToPWDevPage: async (): Promise<void> => {
      await this.navigateTo('https://playwright.dev/');
    },
  };
}
